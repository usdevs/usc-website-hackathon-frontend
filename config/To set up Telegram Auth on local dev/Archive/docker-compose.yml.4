version: '3'

services:
  proxy:
    image: jwilder/nginx-proxy
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - ./certs:/etc/nginx/certs

  foo:
    image: nginx
    environment:
      - VIRTUAL_HOST=foo.test
    volumes:
      - ./foo:/usr/share/nginx/html
